@section Css {
    <link href="~/Content/ripple.css" rel="stylesheet" />
}

<div id="midi-dropzone">
</div>
<div id="flip">
    <a href="https://twitter.com/search?q=%23midiflip&lang=nl" target="_blank"><h1>#MIDIFLIP</h1></a>
    <p>Web tool for automatically flipping MIDI-files.</p>
    <div id="upload">
        <i class="fa fa-file" aria-hidden="true"></i>
        <h6>Drop a file...</h6>
    </div>
    <button id="browse" type="button"><i class="fa fa-upload" aria-hidden="true"></i> Or browse...</button>
    <div id="message" class="warning">Warning</div>
    <div id="options">
        <div id="instrument-select" class="col-xs-6">
            <b>Select instrument:</b>
            <p>
                <input type="radio" id="piano" name="instrument" data-instrument="0" checked>
                <label for="piano">Piano</label>
            </p>
            <p>
                <input type="radio" id="triangle-synth" name="instrument" data-instrument="1">
                <label for="triangle-synth">Triangle Synth</label>
            </p>
        </div>
        <div class="col-xs-6">
            <b>Change octave:</b>
            <select id="octave-change"></select>
        </div>
        <div class="col-xs-12"><i id="mobile-piano-warning"><i class="fa fa-exclamation-circle" aria-hidden="true"></i> The piano instrument might not play correctly on mobile devices.</i></div>
    </div>
    <div id="play-deck">
        <button id="flip-another"><i class="fa fa-angle-left" aria-hidden="true"></i></button>
        <button id="flip-button" type="submit" disabled>FLIP</button>
        <button id="stop-button"><i class="fa fa-stop" aria-hidden="true"></i></button>
    </div>
</div>

<!-- TODO: Credit Andrew Huang for the idea and Alexander Holm for the piano sounds -->

<div class="ripple"></div>

@section Scripts {
    <script src="~/Scripts/dropzone.js"></script>
    <script src="~/Scripts/midiconvert.js"></script>
    <script src="~/Scripts/tone.min.js"></script>
    <script src="~/Scripts/linq.min.js"></script>
    <script src="~/Scripts/constants.js"></script>
    <script src="~/Scripts/player.js"></script>
    <script src="~/Scripts/midiflip.js"></script>
    <script src="~/Scripts/ui.js"></script>
}